#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + @space
	rofi -show combi -show-icons

super + shift + @space
	rofi -show run -show-icons

alt + Tab
	rofi -show window -show-icons

super + d
	kitty zsh -c ranger

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# change gap size
super + a
	$HOME/.dotfiles/scripts/toggle-gap.sh
#
# rotate
#

# rotate group
super + e
	bspc node -f @parent; bspc node -R 90; bspc node -f last

# rotate screen
super + r
	bspc node @/ -R 90

#
# screen locking
#

# lock the screen
super + ctrl + q
	multilockscreen -l

#
# notifications
#

# toggle dunst

super + F2
	if rm $HOME/.dotfiles/.dunstmuted; then killall -SIGUSR2 dunst; else killall -SIGUSR1 dunst; touch $HOME/.dotfiles/.dunstmuted; fi

#
# media keys
#

{super + F12, super + F11, XF86AudioRaiseVolume, XF86AudioLowerVolume}
    $HOME/.dotfiles/scripts/set-volume.sh {+,-,+,-}5

{XF86AudioMute, super + F10}
    pactl set-sink-mute $(pactl info | grep -Po "(?<=Default Sink: ).*") toggle; $HOME/.dotfiles/scripts/set-volume.sh +0


{XF86AudioMicMute, super + F1}
    pactl set-source-mute $(pactl info | grep -Po "(?<=Default Source: ).*") toggle

{XF86AudioNext, super + F9}
    playerctl next

{XF86AudioPrev, super + F7}
    playerctl previous

{XF86AudioPlay, super + F8}
    playerctl play-pause

XF86MonBrightness{Up,Down}
    $HOME/.dotfiles/scripts/set-brightness.sh {+,-}5

#
# Android development
#

super + alt + ctrl + f
    adb -e emu finger touch 1

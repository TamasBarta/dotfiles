# shift + alt - 0 : yabai -m space --balance

# fast focus desktop
fn - 1 : aerospace workspace 1 ; yabai -m space --focus 1
fn - 2 : aerospace workspace 2 ; yabai -m space --focus 2
fn - 3 : aerospace workspace 3 ; yabai -m space --focus 3
fn - 4 : aerospace workspace 4 ; yabai -m space --focus 4
fn - 5 : aerospace workspace 5 ; yabai -m space --focus 5
fn - 6 : aerospace workspace 6 ; yabai -m space --focus 6
fn - 7 : aerospace workspace 7 ; yabai -m space --focus 7
fn - 8 : aerospace workspace 8 ; yabai -m space --focus 8
fn - 9 : aerospace workspace 9 ; yabai -m space --focus 9
fn - 0 : aerospace workspace 10 ; yabai -m space --focus 10

# send window to desktop and follow focus
fn + cmd - 1 : aerospace move-node-to-workspace 1; yabai -m window --space  1; yabai -m space --focus 1
fn + cmd - 2 : aerospace move-node-to-workspace 2; yabai -m window --space  2; yabai -m space --focus 2
fn + cmd - 3 : aerospace move-node-to-workspace 3; yabai -m window --space  3; yabai -m space --focus 3
fn + cmd - 4 : aerospace move-node-to-workspace 4; yabai -m window --space  4; yabai -m space --focus 4
fn + cmd - 5 : aerospace move-node-to-workspace 5; yabai -m window --space  5; yabai -m space --focus 5
fn + cmd - 6 : aerospace move-node-to-workspace 6; yabai -m window --space  6; yabai -m space --focus 6
fn + cmd - 7 : aerospace move-node-to-workspace 7; yabai -m window --space  7; yabai -m space --focus 7
fn + cmd - 8 : aerospace move-node-to-workspace 8; yabai -m window --space  8; yabai -m space --focus 8
fn + cmd - 9 : aerospace move-node-to-workspace 9; yabai -m window --space  9; yabai -m space --focus 9
fn + cmd - 0 : aerospace move-node-to-workspace 10; yabai -m window --space 10; yabai -m space --focus 10
fn + shift - 1 : aerospace move-node-to-workspace 1; yabai -m window --space  1; yabai -m space --focus 1
fn + shift - 2 : aerospace move-node-to-workspace 2; yabai -m window --space  2; yabai -m space --focus 2
fn + shift - 3 : aerospace move-node-to-workspace 3; yabai -m window --space  3; yabai -m space --focus 3
fn + shift - 4 : aerospace move-node-to-workspace 4; yabai -m window --space  4; yabai -m space --focus 4
fn + shift - 5 : aerospace move-node-to-workspace 5; yabai -m window --space  5; yabai -m space --focus 5
fn + shift - 6 : aerospace move-node-to-workspace 6; yabai -m window --space  6; yabai -m space --focus 6
fn + shift - 7 : aerospace move-node-to-workspace 7; yabai -m window --space  7; yabai -m space --focus 7
fn + shift - 8 : aerospace move-node-to-workspace 8; yabai -m window --space  8; yabai -m space --focus 8
fn + shift - 9 : aerospace move-node-to-workspace 9; yabai -m window --space  9; yabai -m space --focus 9
fn + shift - 0 : aerospace move-node-to-workspace 10; yabai -m window --space 10; yabai -m space --focus 10


# open terminal
cmd + ctrl + alt - return : /Applications/WezTerm.app/Contents/MacOS/wezterm

cmd - h : echo "Hide application shortcut is disabled :)"

# focus window
fn - h : aerospace focus left  --boundaries all-monitors-outer-frame ; yabai -m window --focus west || yabai -m display --focus west
fn - j : aerospace focus down  --boundaries all-monitors-outer-frame ; yabai -m window --focus south || yabai -m display --focus south
fn - k : aerospace focus up    --boundaries all-monitors-outer-frame ; yabai -m window --focus north || yabai -m display --focus north
fn - l : aerospace focus right --boundaries all-monitors-outer-frame ; yabai -m window --focus east || yabai -m display --focus east

# swap window
shift + fn - h : aerospace move left ; yabai -m window --swap west
shift + fn - j : aerospace move down ; yabai -m window --swap south
shift + fn - k : aerospace move up   ; yabai -m window --swap north
shift + fn - l : aerospace move right; yabai -m window --swap east


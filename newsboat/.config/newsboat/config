include ~/.config/newsboat/dark

max-items 50

# externel browser
browser "open %u"
macro m set browser "/usr/local/bin/mpv %u"; open-in-browser ; set browser "open %u"
macro l set browser "/usr/local/bin/firefox %u"; open-in-browser ; set browser "open %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

